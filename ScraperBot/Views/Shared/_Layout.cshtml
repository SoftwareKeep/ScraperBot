                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action( "Index", "Home")"><i class='fa fa-bar-chart'></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="@Url.Action( "Index", "Product")"><i class='fa fa-windows'></i> Products</a>
                        </li>
                        <li>
                            <a href="@Url.Action( "Index", "Store")"><i class='fa fa-shopping-cart'></i> Stores</a>
                        </li>
                        @*<li>
                            <a href="@Url.Action( "Index", "Home")"><i class='fa fa-users'></i> Users</a>
