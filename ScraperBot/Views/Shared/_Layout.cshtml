    <div class="container body-content">
        @RenderBody()
    </div>
        
            <footer>
                <div class="container">
                    <p>&copy; @DateTime.Now.Year - ScraperBot | SoftwareKeep</p>
                </div>
</footer>
     

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="//cdn.datatables.net/1.10.12/js/dataTables.bootstrap.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    @RenderSection("scripts", required: false)

    <script>
        $(window).scroll(function () {

            if ($(window).scrollTop() > 10) {
                $('body').addClass('scroll');
            } else {

                $('body').removeClass('scroll');
            }
        });
    </script>
</body>
